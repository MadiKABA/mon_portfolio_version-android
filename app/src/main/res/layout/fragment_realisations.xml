<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textViewMesProjets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mes Realisations"
                android:textSize="38sp"
                android:textAlignment="center"
                android:layout_margin="8dp"
                android:padding="8dp"/>
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/backend"
                android:layout_margin="16dp"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gestion stock realiser avec asp.net"
                android:textSize="24dp"
                android:textAlignment="center"
                android:layout_margin="8dp"
                android:padding="8dp"/>
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/backend"
                android:layout_margin="16dp"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application web de quiz sur la COVID. realiser avec html5,css3 et js"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="8dp"
                android:padding="8dp"/>
            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/backend"
                android:layout_margin="16dp"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application web de quiz sur la COVID. realiser avec html5,css3 et js"
                android:textSize="24dp"
                android:textAlignment="center"
                android:layout_margin="8dp"
                android:padding="8dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>